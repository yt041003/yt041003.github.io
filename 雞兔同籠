<script>
    const { createApp, ref, computed, reactive } = Vue;

    createApp({
        setup() {
            // åªä¿ç•™é€™å…©å€‹åˆ†é 
            const currentTab = ref('table');
            const tabs = [
                { id: 'table', name: 'åˆ—è¡¨è§€å¯Ÿæ©Ÿ' },
                { id: 'algebra', name: 'ä»£æ•¸å…¬å¼' }
            ];

            // --- æ¨¡çµ„ B: Table ---
            const table = reactive({
                heads: 10,
                targetFeet: 28,
                sliderVal: 0 // ä»£è¡¨å…”å­çš„æ•¸é‡
            });

            // ç¢ºä¿æ»‘æ¡¿å€¼ä¸è¶…éé ­æ•¸
            const validateSlider = () => {
                if(table.sliderVal > table.heads) table.sliderVal = table.heads;
            }

            const currentChickens = computed(() => {
                validateSlider();
                return table.heads - table.sliderVal;
            });
            
            const currentFeet = computed(() => (currentChickens.value * 2) + (table.sliderVal * 4));
            
            const feetDiffText = computed(() => {
                const diff = currentFeet.value - table.targetFeet;
                if (diff === 0) return "ğŸ‰ ç­”å°äº†ï¼";
                return diff > 0 ? `å¤ªå¤šäº† (å¤šäº† ${diff} éš»è…³)` : `å¤ªå°‘äº† (å°‘äº† ${Math.abs(diff)} éš»è…³)`;
            });

            const feetDiffColor = computed(() => {
                return currentFeet.value === table.targetFeet ? 'text-green-600 text-xl' : 'text-orange-500';
            });

            return {
                currentTab,
                tabs,
                table,
                currentChickens,
                currentFeet,
                feetDiffText,
                feetDiffColor
            };
        }
    }).mount('#app');
</script>

